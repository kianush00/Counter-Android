<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
         <shape
             android:shape="oval">

             <gradient
                 android:startColor="@color/red_700"
                 android:endColor="@color/red_200"
                 android:gradientRadius="100%p"
                 android:type="radial"
                 android:centerX="0.5"
                 android:centerY="0.5"/>
             <stroke
                 android:width="@dimen/button_stroke"
                 android:color="@color/white"/>

             <size
                 android:width="@dimen/button_size"
                 android:height="@dimen/button_size"/>

             <padding
                 android:top="@dimen/common_padding_min"
                 android:bottom="@dimen/common_padding_min"
                 android:left="@dimen/common_padding_min"
                 android:right="@dimen/common_padding_min"/>

         </shape>
    </item>

    <item android:state_pressed="true">
        <shape
            android:shape="oval">

            <gradient
                android:startColor="@color/red_500"
                android:endColor="@color/red_200"
                android:gradientRadius="80%p"
                android:type="radial"
                android:centerX="0.5"
                android:centerY="0.5"/>
            <!--         <solid android:color="@color/purple_500" />-->
            <stroke
                android:width="@dimen/button_stroke"
                android:color="@color/red_700"/>

            <size
                android:width="@dimen/button_size"
                android:height="@dimen/button_size"/>

            <padding
                android:top="@dimen/common_padding_min"
                android:bottom="@dimen/common_padding_min"
                android:left="@dimen/common_padding_min"
                android:right="@dimen/common_padding_min"/>

        </shape>
    </item>
</selector>